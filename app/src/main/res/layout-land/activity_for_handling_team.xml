<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorTwo"
    tools:context=".view.activity.ForHandlingTeamData">

    <fragment
        android:id="@+id/navHostFragmentTwo"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        app:defaultNavHost="false"
        app:navGraph="@navigation/navigation_two" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/forRV"
        app:itemIconTint="@color/forTextSwitcher"
        app:itemTextColor="@color/forTextSwitcher"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>